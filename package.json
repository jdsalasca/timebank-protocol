{
  "name": "timebank-protocol",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "apps/web-react",
    "packages/*"
  ],
  "scripts": {
    "balances": "node src/compute-balances.mjs examples/ledger.json",
    "dev:web": "npm --workspace apps/web-react run dev",
    "build:web": "npm --workspace apps/web-react run build",
    "preview:web": "npm --workspace apps/web-react run preview",
    "agent:gate": "node scripts/agent-gate.mjs",
    "quality:quick": "npm run balances && npm run build:web && npm run agent:gate",
    "quality:release": "node scripts/release-quality-gate.mjs",
    "docker:prod:up": "docker compose -f infra/docker-compose.yml up --build -d",
    "docker:prod:down": "docker compose -f infra/docker-compose.yml down",
    "docker:dev:up": "docker compose -f infra/docker-compose.yml -f infra/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f infra/docker-compose.yml -f infra/docker-compose.dev.yml down",
    "docker:ghcr:up": "docker compose -f infra/docker-compose.yml -f infra/docker-compose.ghcr.yml up -d",
    "docker:ghcr:down": "docker compose -f infra/docker-compose.yml -f infra/docker-compose.ghcr.yml down",
    "agent:pr:hygiene": "node scripts/agent-pr-hygiene.mjs",
    "agent:evaluate:pr": "node scripts/agent-evaluate-pr.mjs",
    "agent:context:check": "node scripts/agent-context-check.mjs",
    "agent:adr:check": "node scripts/check-contract-adr.mjs"
  },
  "releaseQuality": {
    "minimumCoverage": 0
  }
}